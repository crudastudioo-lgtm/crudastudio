    <script>
        // Smooth scroll
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({
                        behavior: 'smooth',
                        block: 'start'
                    });
                }
            });
        });

        // Alert para botones (aqu√≠ conectar√°s Stripe/Gumroad)
        document.querySelectorAll('.btn').forEach(btn => {
            if (btn.textContent.includes('Reservar') || btn.textContent.includes('Comprar')) {
                btn.addEventListener('click', function(e) {
                    e.preventDefault();
                    alert('Aqu√≠ conectar√°s tu link de pago de Stripe, Gumroad o Calendly');
                });
            }
        });
    </script>
